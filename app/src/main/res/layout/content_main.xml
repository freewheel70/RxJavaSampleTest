<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hong.app.rxjavatest.MainActivity"
    tools:showIn="@layout/activity_main">

    <FrameLayout
        android:background="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.hong.app.rxjavatest.CustomViews.CustomPagerSlidingTabStrip
            android:id="@+id/tabs"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mdl_viewpager_with_tabs_height"
            android:background="?attr/colorPrimary"
            app:pstsDividerColor="?attr/colorPrimaryDark"
            app:pstsIndicatorColor="@android:color/white"
            app:pstsIndicatorHeight="5dp"
            app:pstsUnderlineColor="@android:color/transparent"
            app:pstsUnderlineHeight="0dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mdl_viewpager_with_tabs_height"/>

    </FrameLayout>

</RelativeLayout>
